{% if  pagination.pages > 0 %}
    <nav role="navigation" class="flex justify-center my-8">
        {% if pagination.previous %}
            <a class="border border-grey-600 text-grey-600 px-8 py-3" href="{{pagination.previous.url}}">{{pagination.previous.title}}</a>
        {% endif %}
        {% for part in pagination.parts %}
            {% if part.is_link %}
                <a class="border border-grey-600 text-grey-600 px-8 py-3" href="{{part.url}}">{{part.title}}</a>
            {% else %}
                <span class="border border-grey-600 text-grey-600 px-8 py-3" >{{part.title}}</span>
            {% endif %}
        {% endfor %}
        {% if pagination.next %} 
            <a class="border border-grey-600 text-grey-600 px-8 py-3"  href="{{pagination.next.url}}">{{pagination.next.title}}</a>
        {% endif %}
    </nav>
{% endif %}